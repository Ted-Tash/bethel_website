-# ==================== HERO ====================
.hero.py-20.bg-base-200
  .hero-content.text-center
    .max-w-3xl
      %h1.text-5xl.font-bold Contact Us
      %p.py-6.text-lg.opacity-80
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. We'd love to hear from you.

-# ==================== CONTACT INFO + FORM ====================
.bg-base-100.py-16
  .max-w-7xl.mx-auto.px-4
    .grid.grid-cols-1.lg:grid-cols-2.gap-12

      -# Contact information
      .space-y-8
        %h2.text-3xl.font-bold Get in Touch

        .space-y-6
          .flex.items-start.gap-4
            .bg-primary.text-primary-content.rounded-box.p-3
              %svg.h-6.w-6{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor" }
                %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" }
                %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M15 11a3 3 0 11-6 0 3 3 0 016 0z" }
            .space-y-1
              %h3.font-bold Address
              %p.opacity-70 1234 Lorem Ipsum Blvd
              %p.opacity-70 St. Louis, MO 63100

          .flex.items-start.gap-4
            .bg-primary.text-primary-content.rounded-box.p-3
              %svg.h-6.w-6{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor" }
                %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" }
            .space-y-1
              %h3.font-bold Phone
              %p.opacity-70 (314) 555-0100

          .flex.items-start.gap-4
            .bg-primary.text-primary-content.rounded-box.p-3
              %svg.h-6.w-6{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor" }
                %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" }
            .space-y-1
              %h3.font-bold Email
              %a.link.link-primary{ href: "mailto:info@example.com" } info@example.com

          .flex.items-start.gap-4
            .bg-primary.text-primary-content.rounded-box.p-3
              %svg.h-6.w-6{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor" }
                %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" }
            .space-y-1
              %h3.font-bold Office Hours
              %p.opacity-70 Monday — Friday
              %p.opacity-70 00:00 AM — 00:00 PM

      -# Contact form (placeholder, non-functional)
      .card.bg-base-200.shadow-lg
        .card-body
          %h2.card-title.text-2xl.mb-4 Send a Message
          %form
            .form-control.mb-4
              %label.label
                %span.label-text Name
              %input.input.input-bordered.w-full{ type: "text", placeholder: "Your name" }

            .form-control.mb-4
              %label.label
                %span.label-text Email
              %input.input.input-bordered.w-full{ type: "email", placeholder: "your@email.com" }

            .form-control.mb-4
              %label.label
                %span.label-text Subject
              %select.select.select-bordered.w-full
                %option{ disabled: true, selected: true } Select a subject
                %option Lorem Inquiry
                %option Ipsum Request
                %option Dolor Feedback
                %option Sit Amet Other

            .form-control.mb-6
              %label.label
                %span.label-text Message
              %textarea.textarea.textarea-bordered.w-full{ placeholder: "Your message...", rows: 5 }

            %button.btn.btn-primary.w-full{ type: "button" } Send Message

