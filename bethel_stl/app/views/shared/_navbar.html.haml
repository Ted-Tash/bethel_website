.navbar.bg-base-100.shadow-lg.sticky.top-0.z-50
  .navbar-start
    -# Mobile hamburger dropdown
    .dropdown
      %div{ tabindex: "0", role: "button", class: "btn btn-ghost lg:hidden" }
        %svg.h-5.w-5{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor" }
          %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M4 6h16M4 12h8m-8 6h16" }
      %ul.menu.menu-sm.dropdown-content.bg-base-100.rounded-box.z-10.mt-3.w-52.p-2.shadow{ tabindex: "0" }
        %li= link_to 'Home', root_path, class: active_nav_class(root_path)
        %li= link_to 'About', about_index_path, class: active_nav_class(about_index_path)
        %li= link_to 'Sermons', sermons_path, class: active_nav_class(sermons_path)
        %li= link_to 'Giving', giving_index_path, class: active_nav_class(giving_index_path)
        %li= link_to 'Contact', contact_index_path, class: active_nav_class(contact_index_path)
    = link_to 'Bethel Church', root_path, class: 'btn btn-ghost text-xl'

  .navbar-center.hidden.lg:flex
    %ul.menu.menu-horizontal.px-1
      %li= link_to 'Home', root_path, class: active_nav_class(root_path)
      %li= link_to 'About', about_index_path, class: active_nav_class(about_index_path)
      %li= link_to 'Sermons', sermons_path, class: active_nav_class(sermons_path)
      %li= link_to 'Giving', giving_index_path, class: active_nav_class(giving_index_path)
      %li= link_to 'Contact', contact_index_path, class: active_nav_class(contact_index_path)

  .navbar-end
    - if user_signed_in? && current_user.admin?
      = link_to 'Admin', admin_dashboard_path, class: 'btn btn-primary btn-sm'
