      .dropdown.dropdown-end
        %div{ tabindex: "0", role: "button", class: "btn btn-ghost btn-circle avatar" }
          .w-10.rounded-full
            %div.bg-primary.text-primary-content.rounded-full.w-10.h-10.flex.items-center.justify-center.font-bold T
        %ul.menu.menu-sm.dropdown-content.bg-base-100.rounded-box.z-10.mt-3.w-52.p-2.shadow{ tabindex: "0" }
          %li
            %a Profile
          %li
            %a Settings
          %li
            %a Logout

  .container.mx-auto.p-4.max-w-7xl

    -# ==================== HERO ====================
    .hero.bg-base-100.rounded-box.my-8.shadow
      .hero-content.text-center.py-16
        .max-w-2xl
          %h1.text-5xl.font-bold DaisyUI + Tailwind Showcase
          %p.py-6.text-lg
            Every DaisyUI component and a bunch of Tailwind utility classes all on one page.
            This is what happens when you throw everything at the wall.
          .flex.gap-2.justify-center.flex-wrap
            %button.btn.btn-primary Get Started
            %button.btn.btn-secondary Learn More
            %button.btn.btn-accent.btn-outline Browse

    -# ==================== BUTTONS ====================
    .card.bg-base-100.shadow.my-8
      .card-body
        %h2.card-title.text-3xl.mb-6 Buttons
        %h3.text-xl.font-semibold.mb-3 Brand Colors
        .flex.flex-wrap.gap-2.mb-6
          %button.btn Default
          %button.btn.btn-neutral Neutral
          %button.btn.btn-primary Primary
          %button.btn.btn-secondary Secondary
          %button.btn.btn-accent Accent
          %button.btn.btn-info Info
          %button.btn.btn-success Success
          %button.btn.btn-warning Warning
          %button.btn.btn-error Error
          %button.btn.btn-ghost Ghost
          %button.btn.btn-link Link

        %h3.text-xl.font-semibold.mb-3 Outline
        .flex.flex-wrap.gap-2.mb-6
          %button.btn.btn-outline Outline
          %button.btn.btn-outline.btn-primary Primary
          %button.btn.btn-outline.btn-secondary Secondary
          %button.btn.btn-outline.btn-accent Accent
          %button.btn.btn-outline.btn-info Info
          %button.btn.btn-outline.btn-success Success
          %button.btn.btn-outline.btn-warning Warning
          %button.btn.btn-outline.btn-error Error

        %h3.text-xl.font-semibold.mb-3 Sizes
        .flex.flex-wrap.gap-2.items-center.mb-6
          %button.btn.btn-lg Large
          %button.btn Medium
          %button.btn.btn-sm Small
          %button.btn.btn-xs Tiny

        %h3.text-xl.font-semibold.mb-3 Shapes & States
        .flex.flex-wrap.gap-2.items-center.mb-6
          %button.btn.btn-wide Wide
          %button.btn.btn-circle
            %svg.h-6.w-6{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor" }
              %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M6 18L18 6M6 6l12 12" }
          %button.btn.btn-square
            %svg.h-6.w-6{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor" }
              %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" }
          %button.btn.btn-disabled Disabled
          %button.btn.btn-primary.loading.btn-square
            %span.loading.loading-spinner
          %button.btn.btn-soft.btn-primary Soft
          %button.btn.btn-dash.btn-secondary Dash

    -# ==================== BADGES ====================
    .card.bg-base-100.shadow.my-8
      .card-body
        %h2.card-title.text-3xl.mb-6 Badges
        .flex.flex-wrap.gap-2.mb-4
          %span.badge Badge
          %span.badge.badge-neutral Neutral
          %span.badge.badge-primary Primary
          %span.badge.badge-secondary Secondary
          %span.badge.badge-accent Accent
          %span.badge.badge-info Info
          %span.badge.badge-success Success
          %span.badge.badge-warning Warning
          %span.badge.badge-error Error
          %span.badge.badge-ghost Ghost
          %span.badge.badge-outline Outline
          %span.badge.badge-outline.badge-primary Outline Primary

        %h3.text-xl.font-semibold.mb-3.mt-4 Badge Sizes
        .flex.flex-wrap.gap-2.items-center
          %span.badge.badge-lg.badge-primary Large
          %span.badge.badge-md.badge-secondary Medium
          %span.badge.badge-sm.badge-accent Small
          %span.badge.badge-xs.badge-info Tiny

    -# ==================== ALERTS ====================
    .card.bg-base-100.shadow.my-8
      .card-body
        %h2.card-title.text-3xl.mb-6 Alerts
        .flex.flex-col.gap-4
          .alert
            %svg.h-6.w-6.shrink-0.stroke-current{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" }
            %span 12 unread messages. Tap to see.

          .alert.alert-info
            %svg.h-6.w-6.shrink-0.stroke-current{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" }
            %span New software update available.

          .alert.alert-success
            %svg.h-6.w-6.shrink-0.stroke-current{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" }
            %span Your purchase has been confirmed!

          .alert.alert-warning
            %svg.h-6.w-6.shrink-0.stroke-current{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" }
            %span Warning: Invalid email address!

          .alert.alert-error
            %svg.h-6.w-6.shrink-0.stroke-current{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" }
            %span Error! Task failed successfully.

    -# ==================== CARDS ====================
    .card.bg-base-100.shadow.my-8
      .card-body
        %h2.card-title.text-3xl.mb-6 Cards

        .grid.grid-cols-1.md:grid-cols-2.lg:grid-cols-3.gap-6

          -# Basic Card
          .card.bg-base-100.border.border-base-300
            .card-body
              %h3.card-title Basic Card
              %p This is a basic card with some content inside of it. Simple and clean.
              .card-actions.justify-end
                %button.btn.btn-primary Action

          -# Image Card
          .card.bg-base-100.border.border-base-300
            %figure.bg-gradient-to-br.from-primary.to-secondary.h-48.flex.items-center.justify-center
              %span.text-6xl.text-white.font-bold IMG
            .card-body
              %h3.card-title
                Image Card
                %span.badge.badge-secondary NEW
              %p A card with a fancy gradient placeholder where an image would go.
              .card-actions.justify-end
                %button.btn.btn-primary Buy Now

          -# Compact Card
          .card.card-compact.bg-base-100.border.border-base-300
            .card-body
              %h3.card-title Compact Card
              %p Less padding for a tighter layout.
              .card-actions.justify-end
                %button.btn.btn-sm.btn-ghost Details

          -# Card with Badge
          .card.bg-primary.text-primary-content
            .card-body
              %h3.card-title.text-primary-content Primary Card
              %p This card uses the primary color scheme. Looking fancy!
              .card-actions.justify-end
                %button.btn.btn-sm Glass Style

          -# Card with Stats
          .card.bg-neutral.text-neutral-content
            .card-body.items-center.text-center
              %h3.card-title.text-neutral-content Centered Card
              %p.text-neutral-content\/70 With centered content and neutral background.
              .card-actions.justify-center
                %button.btn.btn-primary Accept
                %button.btn.btn-ghost Deny

          -# Glass Card
          .card.bg-base-100.border.border-base-300.shadow-xl
            .card-body
              %h3.card-title Shadow XL Card
              %p This card has extra-large shadow for that floating look.
              .card-actions.justify-end
                .badge.badge-outline Fashion
                .badge.badge-outline Products

    -# ==================== ACCORDION / COLLAPSE ====================
    .card.bg-base-100.shadow.my-8
      .card-body
        %h2.card-title.text-3xl.mb-6 Accordion / Collapse
        .flex.flex-col.gap-2
          .collapse.collapse-arrow.bg-base-200
            %input{ type: "radio", name: "accordion-1", checked: true }
            .collapse-title.font-semibold What is DaisyUI?
            .collapse-content
              %p DaisyUI is a component library for Tailwind CSS. It provides semantic class names like btn, card, modal etc. so you write less utility classes.

          .collapse.collapse-arrow.bg-base-200
            %input{ type: "radio", name: "accordion-1" }
            .collapse-title.font-semibold Why use Tailwind CSS?
            .collapse-content
              %p Tailwind CSS is a utility-first CSS framework. It gives you low-level utility classes to build custom designs without writing CSS from scratch.

          .collapse.collapse-arrow.bg-base-200
            %input{ type: "radio", name: "accordion-1" }
            .collapse-title.font-semibold Can I customize the theme?
            .collapse-content
              %p Absolutely! DaisyUI supports 30+ built-in themes and you can create custom themes with CSS variables.

          .collapse.collapse-plus.bg-base-200
            %input{ type: "radio", name: "accordion-2" }
            .collapse-title.font-semibold Plus/minus style accordion
            .collapse-content
              %p This accordion uses plus/minus icons instead of arrows.

    -# ==================== TABS ====================
    .card.bg-base-100.shadow.my-8
      .card-body
        %h2.card-title.text-3xl.mb-6 Tabs

        %h3.text-xl.font-semibold.mb-3 Basic Tabs
        .tabs.tabs-border.mb-6
          %input.tab{ type: "radio", name: "tabs-1", "aria-label" => "Tab 1", checked: true }
          .tab-content.p-4
            %p Content for Tab 1. This is the default active tab.
          %input.tab{ type: "radio", name: "tabs-1", "aria-label" => "Tab 2" }
          .tab-content.p-4
            %p Content for Tab 2. Click to see this content.
          %input.tab{ type: "radio", name: "tabs-1", "aria-label" => "Tab 3" }
          .tab-content.p-4
            %p Content for Tab 3. Each tab has its own content.

        %h3.text-xl.font-semibold.mb-3 Boxed Tabs
        .tabs.tabs-box
          %a.tab Tab 1
          %a.tab.tab-active Tab 2
          %a.tab Tab 3

        %h3.text-xl.font-semibold.mb-3.mt-6 Lifted Tabs
        .tabs.tabs-lift
          %a.tab Tab 1
          %a.tab.tab-active Tab 2
          %a.tab Tab 3

    -# ==================== STATS ====================
    .card.bg-base-100.shadow.my-8
      .card-body
        %h2.card-title.text-3xl.mb-6 Stats
        .stats.shadow.w-full
          .stat
            .stat-figure.text-primary
              %svg.inline-block.h-8.w-8.stroke-current{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24" }
                %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" }
            .stat-title Total Likes
            .stat-value.text-primary 25.6K
            .stat-desc 21% more than last month

          .stat
            .stat-figure.text-secondary
              %svg.inline-block.h-8.w-8.stroke-current{ xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24" }
                %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", d: "M13 10V3L4 14h7v7l9-11h-7z" }
            .stat-title Page Views
            .stat-value.text-secondary 2.6M
            .stat-desc 14% more than last month

          .stat
            .stat-figure.text-accent
              .avatar.online
                .w-16.rounded-full
                  %div.bg-accent.text-accent-content.rounded-full.w-16.h-16.flex.items-center.justify-center.text-2xl.font-bold JD
            .stat-value 86%
            .stat-title Tasks done
            .stat-desc.text-secondary 31 tasks remaining

