    .card.bg-base-100.shadow.my-8
      .card-body
        %h2.card-title.text-3xl.mb-6 Progress & Loading

        %h3.text-xl.font-semibold.mb-3 Progress Bars
        .flex.flex-col.gap-3.mb-6
          %progress.progress.progress-primary.w-full{ value: "10", max: "100" }
          %progress.progress.progress-secondary.w-full{ value: "30", max: "100" }
          %progress.progress.progress-accent.w-full{ value: "50", max: "100" }
          %progress.progress.progress-info.w-full{ value: "70", max: "100" }
          %progress.progress.progress-success.w-full{ value: "90", max: "100" }
          %progress.progress.progress-warning.w-full{ value: "45", max: "100" }
          %progress.progress.progress-error.w-full{ value: "60", max: "100" }

        %h3.text-xl.font-semibold.mb-3 Radial Progress
