        %h3.text-xl.font-semibold.mb-3 Loading Spinners
        .flex.flex-wrap.gap-6.items-center
          %span.loading.loading-spinner.loading-xs
          %span.loading.loading-spinner.loading-sm
          %span.loading.loading-spinner.loading-md
          %span.loading.loading-spinner.loading-lg
          %span.loading.loading-dots.loading-md
          %span.loading.loading-ring.loading-md
          %span.loading.loading-ball.loading-md
